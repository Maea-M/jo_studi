{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
<section style="background-color: #9ae1d3;">
  <div class="container py-5">
    <div class="row">
      <div class="col">
        <nav aria-label="breadcrumb" class="bg-darklight rounded-3 p-3 mb-4">
          <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page" href:"/profil">Profil utilisateur</li>
          </ol>
        </nav>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-4">
        <div class="card mb-4">
          <div class="card-body text-center">
            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" alt="avatar"
              class="rounded-circle img-fluid" style="width: 150px;">
            <h5 class="my-3">{{ app.user.firstname}} </h5>
            <p class="text-muted mb-1">{{ app.user.lastname}} </p>
            <button class="btn btn-success">Changer votre photo de profil</button>
          </div>
        </div>
      </div>

      <div class="col-lg-8">
        <div class="card mb-4">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Nom</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{ app.user.lastname}} </p>
              </div>
            </div>
            <hr>

            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Pr√©nom</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{ app.user.firstname}} </p>
              </div>
            </div>
            <hr>

            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Email</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{ app.user.email}} </p>
              </div>
            </div>
            <hr>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <div class="card mb-4 mb-md-0">
              <div class="card-body">
                <p class="mb-4"><span class="text-secondary font-italic me-1">Vos commandes</span> : Billet en cours</p>
                <p class="mb-1" style="font-size: .77rem;">{{ app.user.pathticket}}</p>
          
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="card mb-4 mb-md-0">
              <div class="card-body">
                <p class="mb-4"><span class="text-secondary font-italic me-1">Changer votre mot de passe</span></p>
                  <button class="btn btn-success">Changer le mot de passe</button>


                <p class="mb-4 mt-5"><span class="text-secondary font-italic me-1">Supprimer votre compte</span></p>
                <button class="btn btn-success">Supprimer votre compte</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
{% endblock %}
